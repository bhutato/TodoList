<%- include('header'); -%>

    <div class="container">

        <div class="box" id="heading">
            <h1> <%= listTitle %> </h1>
        </div>

        
        <div class="box">
                
            <% newListItems.forEach(function (item){ %>
                <form action="/delete" method="POST">
                    <div class="item">
                        <input type="checkbox" name= "checkedBox" value= "<%=item._id%>" onChange="this.form.submit()">
                        <p> <%= item.name %> </p>
                    </div>
                </form>
                
             <% }) %>
            
             <form class="item"  method="POST" >
                <input type="text" name="newEntry" autocomplete="off" placeholder="new item" >
                <button type="submit">+</button>
            </form>
        </div>
        </div>
    
        
    </div>
   
    <%- include('footer'); -%>