<%- include('header'); -%>

    <div class="container">

        <div class="box" id="heading">
            <h1> <%= listTitle %> </h1>
        </div>

        
        <div class="box">
                
            <% newListItems.forEach(function (item){ %>
                <div class="item">
                    <input type="checkbox">
                    <p> <%= item.name %> </p>
                </div>
                
             <% }) %>
            
             <form class="item" action="/<%= route %>" method="POST" >
                <input type="text" name="newEntry" autocomplete="off" placeholder="new item" >
                <button type="submit">+</button>
            </form>
        </div>
        </div>
    
        
    </div>
   
    <%- include('footer'); -%>